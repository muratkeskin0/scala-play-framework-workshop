# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /todo                       controllers.HomeController.todo()
GET     /signUp                     controllers.HomeController.signUp()
GET     /login                      controllers.HomeController.login()
GET     /logout                     controllers.HomeController.logout()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# TaskList controller
GET     /taskList                  controllers.TaskController.taskList()
GET     /profile                   controllers.UserController.profile()
POST    /signUpValidate            controllers.UserController.signUpValidate()
POST    /loginValidate            controllers.UserController.loginValidate()
POST    /updateProfile            controllers.UserController.updateProfile()
POST    /changePassword           controllers.UserController.changePassword()
POST    /addTask                  controllers.TaskController.addTask()
POST    /updateTask               controllers.TaskController.updateTask()
POST    /deleteTask                  controllers.TaskController.deleteTask()



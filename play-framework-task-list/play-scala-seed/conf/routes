# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /indexWithMessage           controllers.HomeController.indexWithMessage()
GET     /indexWithSharedMessage     controllers.MessageController.indexWithMessage()
GET     /todo                       controllers.HomeController.todo()
GET     /signUp                     controllers.HomeController.signUp()
GET     /login                      controllers.HomeController.login()
GET     /logout                     controllers.HomeController.logout()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# TaskList controller
GET     /taskList                  controllers.TaskListController.taskList()
POST    /signUpValidate            controllers.TaskListController.signUpValidate()
POST    /loginValidate            controllers.TaskListController.loginValidate()
POST    /addTask                  controllers.TaskListController.addTask()
POST    /deleteTask                  controllers.TaskListController.deleteTask()



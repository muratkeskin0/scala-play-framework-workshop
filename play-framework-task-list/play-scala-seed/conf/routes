# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /todo                       controllers.HomeController.todo()
GET     /signUp                     controllers.HomeController.signUp()

# Auth controller (with Pac4j FormClient integration)
GET     /login                      controllers.AuthController.login()
POST    /login                      controllers.AuthController.authenticate()
GET     /logout                     controllers.AuthController.logout()

# Pac4j callback controller
GET     /callback                   controllers.CallbackController.callback()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# TaskList controller
GET     /taskList                  controllers.TaskController.taskList()
GET     /modern-task-list          controllers.TaskController.modernTaskList()
GET     /profile                   controllers.UserController.profile()
POST    /signUpValidate            controllers.UserController.signUpValidate()
POST    /loginValidate            controllers.UserController.loginValidate()
POST    /updateProfile            controllers.UserController.updateProfile()
POST    /changePassword           controllers.UserController.changePassword()
POST    /addTask                  controllers.TaskController.addTask()
POST    /updateTask               controllers.TaskController.updateTask()
POST    /deleteTask                  controllers.TaskController.deleteTask()

# AJAX API Endpoints
GET     /api/tasks                controllers.TaskController.getTasksAjax()
POST    /api/tasks                controllers.TaskController.addTaskAjax()
PUT     /api/tasks/:id            controllers.TaskController.updateTaskAjax(id: Long)
DELETE  /api/tasks/:id            controllers.TaskController.deleteTaskAjax(id: Long)

# Country Laws
GET     /country-laws             controllers.LawInfoController.countryLaws()

# Admin dashboard
GET     /admin/dashboard           controllers.HomeController.adminDashboard()
POST    /admin/users/update        controllers.UserController.updateUser()
POST    /admin/users/delete        controllers.UserController.deleteUser()



